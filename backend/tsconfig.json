{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "bgpg": ["../common"],
      "bgpg/*": ["../common/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
  // "references": [{ "path": "../common" }]
}
