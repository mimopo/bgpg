{
  "name": "@mimopo/bgpg",
  "version": "0.0.1",
  "description": "BGPG",
  "author": "Miguel Montes <npm@mimopo.es>",
  "license": "AGPL-3.0-or-later",
  "private": "true",
  "scripts": {
    "doc-prune": "rimraf ./doc-dist/",
    "doc-frontend": "compodoc ./frontend/src -c ./compodoc.json -p ./frontend/tsconfig.json -d ./doc-dist/frontend/ -n 'BGPG Frontend Documentation'",
    "doc-backend": "compodoc ./backend/src -c ./compodoc.json -p ./backend/tsconfig.json -d ./doc-dist/backend/  -n 'BGPG Backend Documentation'",
    "doc-common": "cp -R ./doc/index.html ./doc-dist/",
    "doc": "npm-run-all -l 'doc-*'",
    "start": "npm-run-all -p -l start-*",
    "build": "npm-run-all -p -l build-frontend build-backend schema-*",
    "build-backend": "npm --prefix=backend run build",
    "build-frontend": "npm --prefix=frontend run build",
    "start-backend": "npm --prefix=backend run start",
    "start-frontend": "npm --prefix=frontend run start",
    "schema-game": "typescript-json-schema backend/src/common/model/game.ts Game --required -o schema/schema-game.json",
    "schema-shapes": "typescript-json-schema backend/src/common/model/game-shapes.ts GameShapes --required -o schema/schema-shape.json",
    "schema-translation": "typescript-json-schema backend/src/common/model/game-translation.ts GameTranslation --required -o schema/schema-translation.json"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.11",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript-json-schema": "^0.43.0"
  }
}
